{
    "name": "simple-draw-ts",
    "version": "1.0.0",
    "description": "Simple Draw TS",
    "author": "Sereno & JP",
    "license": "ISC",
    "@std/esm": "cjs",
    "main": "script.js",
    "dependencies": {},
    "devDependencies": {
        "browserify": "^16.2.2",
        "opn-cli": "^4.0.0",
        "ts-node": "^8.0.3",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "^3.3.3333",
        "watchify": "^3.11.1"
    },
    "scripts": {
        "build": "tsc",
        "browserify": "browserify build/script.js -o dist/bundle.js",
        "browser": "npm run build; npm run browserify; opn index.html",
        "start": "npm run build; node build/main.js",
        "watchify": "watchify build/script.js -o dist/bundle.js",
        "lint": "tslint \"src/**/*.ts\"",
        "lint:fix": "tslint \"src/**/*.ts\" --fix",
        "dev": "tsc --watch & npm run watchify",
        "dev:fix": "docker exec simpledraw-client npm run lint:fix"
    }
}
